
<%
	blk_style = ""
	if args
	#	if args[:bg_image_url]
	#		blk_style << "background-image: url(#{args[:bg_image_url]});"
	#	end
		if args[:bg_color]
			blk_style << "background-color: #{args[:bg_color]};"
		end
		if args[:color]
			blk_style << "color: #{args[:color]};"
		end
		if args[:shadow_color]
			blk_style << "text-shadow: -1px -1px 1px #{args[:shadow_color]};"
		end
		#	blk_style << "height: 90vh;"
		blk_style << "text-shadow: -3px -3px 3px black;"
	end
%>



<div id="<%= id %>" class="container-fluid">
	<div class="row" sstyle="border: solid thin red;">
		<div id="carousel-example-generic" class="col-md-12 jjumbotron blk-carousel carousel slide" style="<%= blk_style %>" data-ride="carousel">
			<div class="ttext-center">
<ol class="carousel-indicators" style="text-shadow: 1px 1px 1px black;">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner ttext-center" role="listbox" style="width: 80%;margin: 0 auto;  bborder: solid thin red; vvertical-align: middle;">
<% cnt = 0 %>
<% content[:items].each do |item| %>
	<div class="item <%= cnt==0 ? 'active':'' %> text-center" style="width: 100%; hheight: 90vh; margin: 0 auto; vvertical-align: middle; bborder: solid thin red;">
	  <!--img width="100%" height="100%"  src="<%= item[:image_url] %>" alt="..." style="width: 100%; hheight: 100%; -webkit-filter: saturate(20%);"-->
	  <img width="100%" height="100%"  src="<%= item[:image_url] %>" alt="..." style="width: 100%; hheight: 100%; -webkit-filter: saturate(20%);">
	  <div class="carousel-caption">
	    <h3>qqqqq <%= item[:title] %></h3>
	    <p>wwwww <%= item[:subtitle] %></p>
	  </div>
	</div>
<% cnt += 1 %>
<% end #if content && content[:items] %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>


			</div>
		</div>
	</div>
</div>


